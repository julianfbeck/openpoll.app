---
import Layout from './Layout.astro';
import Sidebar from './Sidebar.astro';
import '@/styles/globals.css';

interface Props {
  title: string;
  currentPage: string;
}

const { title, currentPage } = Astro.props;
---

<Layout title="title">
  <!-- Card in the upper third of the page -->
  <Sidebar currentPage="about" />

  <slot />
</Layout>
