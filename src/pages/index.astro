---
import '@/styles/globals.css';
import SiteLayout from '@/layouts/SiteLayout.astro';
---

<SiteLayout currentPage="" title="" hideCard>
  <section id="hero-section" class="flex justify-center mt-20 h-screen">
    <div class="md:w-1/2">
      <h1 class="text-4xl text-center font-semibold md:text-6xl">
        Create and share polls. Welcome to
        <span class="text-secondary text-">OpenPoll</span>
      </h1>
      <h2 class="mt-10 text-lg text-center opacity-80 md:text-2xl">
        OpenPoll is a free and open-source platform to create and share polls.
        Use moderation features to share your polls during a live event or
        meeting.
      </h2>
      <div class="flex justify-evenly mt-10">
        <a
          href="https://https://github.com/julianfbeck/openpoll"
          class="bg-black text-white px-3 py-1 text-sm md:text-base md:px-6 md:py-2 rounded-lg text-center font-semibold hover:scale-110 hover:opacity-85 transition inline-block"
          target="_blank"
        >
          Github Repo
        </a>
        <a
          href="/new"
          class="bg-transparent text-black border border-black px-3 py-1 text-sm md:text-base md:px-6 md:py-2 rounded-lg text-center font-semibold hover:scale-110 hover:opacity-85 transition inline-block"
          target="_blank"
        >
          Create Poll
        </a>
      </div>
    </div>
  </section>
</SiteLayout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  #hero-section {
    opacity: 0;
    animation: fadeIn 0.8s ease-in-out forwards;
  }
</style>
