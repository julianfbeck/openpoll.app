---
import SiteLayout from '@/layouts/CardLayout.astro';
import FullPageLayout from '@/layouts/FullPageLayout.astro';
---

<FullPageLayout currentPage="OpenPoll" title="OpenPoll">
  <!-- Hero Section -->
  <section
    id="hero-section"
    class="relative min-h-screen flex items-center justify-center px-4 overflow-hidden"
  >
    <!-- Background gradient -->
    <div
      class="absolute inset-0 bg-gradient-to-br from-blue-50 via-white to-purple-50 -z-10"
    >
    </div>

    <!-- Floating elements for visual interest -->
    <div
      class="absolute top-20 left-10 w-72 h-72 bg-blue-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"
    >
    </div>
    <div
      class="absolute top-20 right-10 w-72 h-72 bg-purple-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"
    >
    </div>
    <div
      class="absolute -bottom-8 left-20 w-72 h-72 bg-pink-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000"
    >
    </div>

    <div class="max-w-4xl mx-auto text-center relative z-10">
      <!-- Main heading with better typography -->
      <h1 class="text-5xl md:text-7xl font-bold leading-tight mb-6">
        Create and share polls with
        <span
          class="text-secondary bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"
          >OpenPoll</span
        >
      </h1>

      <!-- Subtitle with improved spacing -->
      <p
        class="text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto leading-relaxed"
      >
        A free and open-source platform to create interactive polls. Perfect for
        live events, meetings, and gathering feedback from your audience.
      </p>

      <!-- CTA Buttons with improved design -->
      <div class="flex flex-col sm:flex-row justify-center gap-4 mb-12">
        <a
          href="/new"
          class="bg-secondary text-white text-lg px-8 py-4 rounded-xl font-semibold hover:shadow-lg hover:scale-105 transition-all duration-300 ease-out"
        >
          Create Your First Poll
        </a>
        <a
          href="https://github.com/julianfbeck/openpoll.app"
          class="bg-white text-gray-700 border-2 border-gray-200 text-lg px-8 py-4 rounded-xl font-semibold hover:border-secondary hover:text-secondary hover:shadow-lg hover:scale-105 transition-all duration-300 ease-out"
          target="_blank"
        >
          View on GitHub
        </a>
      </div>

      <!-- Feature highlights -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-16">
        <div
          class="bg-white/70 backdrop-blur-sm p-6 rounded-xl shadow-lg border border-white/20"
        >
          <div
            class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4 mx-auto"
          >
            <svg
              class="w-6 h-6 text-secondary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Lightning Fast</h3>
          <p class="text-gray-600">
            Create polls in seconds and get instant results from your audience.
          </p>
        </div>

        <div
          class="bg-white/70 backdrop-blur-sm p-6 rounded-xl shadow-lg border border-white/20"
        >
          <div
            class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4 mx-auto"
          >
            <svg
              class="w-6 h-6 text-green-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Secure & Private</h3>
          <p class="text-gray-600">
            Your data stays safe with our privacy-first approach and secure
            infrastructure.
          </p>
        </div>

        <div
          class="bg-white/70 backdrop-blur-sm p-6 rounded-xl shadow-lg border border-white/20"
        >
          <div
            class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4 mx-auto"
          >
            <svg
              class="w-6 h-6 text-purple-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Easy Sharing</h3>
          <p class="text-gray-600">
            Share your polls with a simple link and track responses in
            real-time.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Everything you need for interactive polling
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Powerful features designed to make creating and managing polls
          effortless
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div
          class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300"
        >
          <h3 class="text-xl font-semibold mb-3 text-gray-900">Live Results</h3>
          <p class="text-gray-600 mb-4">
            Watch responses come in real-time with beautiful, animated charts
            and graphs.
          </p>
        </div>

        <div
          class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300"
        >
          <h3 class="text-xl font-semibold mb-3 text-gray-900">
            Moderation Tools
          </h3>
          <p class="text-gray-600 mb-4">
            Control who can vote and when with built-in moderation features for
            events.
          </p>
        </div>

        <div
          class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300"
        >
          <h3 class="text-xl font-semibold mb-3 text-gray-900">
            Multiple Choice
          </h3>
          <p class="text-gray-600 mb-4">
            Create polls with multiple options, single or multiple selections
            supported.
          </p>
        </div>

        <div
          class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300"
        >
          <h3 class="text-xl font-semibold mb-3 text-gray-900">Open Source</h3>
          <p class="text-gray-600 mb-4">
            Completely open source and free to use. Contribute to the project on
            GitHub.
          </p>
        </div>

        <div
          class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300"
        >
          <h3 class="text-xl font-semibold mb-3 text-gray-900">
            No Registration
          </h3>
          <p class="text-gray-600 mb-4">
            Start creating polls immediately without the need for accounts or
            registration.
          </p>
        </div>

        <div
          class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300"
        >
          <h3 class="text-xl font-semibold mb-3 text-gray-900">
            Responsive Design
          </h3>
          <p class="text-gray-600 mb-4">
            Works perfectly on desktop, tablet, and mobile devices for maximum
            accessibility.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-blue-600 to-purple-600">
    <div class="max-w-4xl mx-auto text-center px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to get started?
      </h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        Join thousands of users who trust OpenPoll for their polling needs.
        Create your first poll in under a minute.
      </p>
      <a
        href="/new"
        class="inline-block bg-white text-blue-600 text-lg px-8 py-4 rounded-xl font-semibold hover:shadow-xl hover:scale-105 transition-all duration-300 ease-out"
      >
        Create Poll Now
      </a>
    </div>
  </section>
</FullPageLayout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  #hero-section {
    animation: fadeIn 1s ease-out forwards;
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  /* Gradient text support for older browsers */
  .bg-clip-text {
    -webkit-background-clip: text;
    background-clip: text;
  }
</style>
